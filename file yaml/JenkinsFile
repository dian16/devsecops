pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    some-label: some-value
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command:
    - cat
    tty: true
            '''
        }
    }
    stages {
        stage('Check Kubernetes') {
            steps {
                container('kubectl') {
                    sh 'kubectl get nodes'
                }
            }
        }
    }
}
